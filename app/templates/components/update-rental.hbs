{{#if updateRentalForm}}
  <h4> Update {{rental.owner}}'s {{rental.type}}</h4>
  <div>
      <form>
          <div class="form-group">
            <label for="owner1">Owner</label>
            {{input value=owner id="owner1" placeholder=rental.owner}}
          </div>

          <div class="form-group">
            <label for="type1">Type</label>
            {{input value=type id="type1" placeholder=rental.type}}
          </div>

          <div class="form-group">
            <label for="city1">City</label>
            {{input value=city id="city1" placeholder=rental.city}}
          </div>

          <div class="form-group">
            <label for="bedrooms1">Bedrooms</label>
            {{input value=bedrooms id="bedrooms1" placeholder=rental.bedrooms}}
          </div>

          <div class="form-group">
            <label for="image1">Image</label>
            {{input value=image id="image1" placeholder=rental.image}}
          </div>
          <button {{action 'update' rental}}>Save</button>

        </form>
    </div>

    {{else}}
        <button {{action 'updateRentalForm'}}>Update</button>
    {{/if}}
